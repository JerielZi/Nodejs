{% extends "layout.njk" %}

{% block head %}

<title>Portfolio - Jeriel Zinga</title>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
rel="stylesheet">

{% endblock %}

{% block content %}

  <div id="wrapper">
    <h1>Projetos</h1>
  </div>

  <section class="cards">

    {% for item in items %}

      <div class="card" id="{{item.id}}">
        <div class="cards_image_container {{'featured-wrapper if item.featured'}}">
          <img src="portfolio_website.png" alt="Imagem de {{item.title}}">
         
          {% if item.featured %}
            <div class="featured">Featured</div>
          {% endif %}
          
        </div>
        <div class="card_content">
          <p>{{item.title}}</p>
        </div>
        <div class="card_info">
          <p>{{item.about}}</p>
          <p class="card_price">{{item.price}}</p>
        </div>
      </div>

    {% endfor %}

  </section>

  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <i class="material-icons">close</i>
      </a>

      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>

    </div>

  </div>

  <script src="scripts.js"></script>

  {% endblock %}